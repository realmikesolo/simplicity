  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^22.18.6",
    "drizzle-kit": "0.31.5",
    "esbuild": "0.25.10",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
